<form>
  <logo path='CobaltLogo.png'></logo>
  <company>Cobalt Environmental Solutions LLC</company>
  <phone>580-229-0067</phone>
  <address>PO BOX 177\nWilson, OK 73463\nPermit # OCC023434</address>
  <constant type='company'>Backhoe</constant>
  <row>
    <item>
      <label>Name of Water Hauling Company</label>
      <input type='text'></input>
    </item>
  </row>
  
  <row>
    <item>
      <label>Truck #</label>
      <input type='text'></input>
    </item>
  </row>
  
  <row>
    <item>
      <label>Water Hauling Permit #</label>
      <input type='text'></input>
    </item>
  </row>
  
  <row>
    <item>
      <label>Lease Information</label>
    </item>
  </row>
  
  <row>
    <item>
      <label>Name of Lease Operator</label>
      <input type='text'></input>
    </item>
  </row>
  
  <row>
    <item>
      <label>Lease Name</label>
      <input type='text'></input>
    </item>
  </row>
  
  <row>
    <item>
      <radio>
        <label>Type of Water Hauled</label>
        <option>Pit Water</option>
        <option>Flowback Water</option>
        <option>Fresh Water</option>
        <option>Produced Water</option>
        <option-qualifier>
          <label>Amount</label>
          <input type='text'></input>
        </option-qualifier>
      </radio>
    </item>
  </row>
  
  <row>
    <item>
      <label>Date</label>
      <input type='date'></input>
    </item>
  </row>
  
  <row>
    <item>
      <label>Time in</label>
      <input type='time'></input>
    </item>
  </row>
  
  
  <row>
    <item>
      <signature label='Driver Signature'></signature>
    </item>
  </row>
  
</form>
